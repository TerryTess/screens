<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baige"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/logo"
        android:layout_alignBottom="@id/logo"
        android:layout_marginEnd="70dp"
        android:layout_toStartOf="@+id/logo"
        android:src="@android:drawable/ic_menu_back" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/img"
        />

    <TextView
        android:id="@+id/pharmacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pharmacy"
        android:textColor="@color/maroon"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/textField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pharmacy"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/border_background"
        android:padding="8dp"
        android:hint="Our pharmacy is equipped with quality, affordable medication provided by professional, highly qualified and certified staff. Our knowledgeable staff explain to patients the details of their medication in a way that is easy to understand and simple to follow. Guidance is always provided on accurate usage including age-based dosage, frequency of use, route of administration, storage of potential interactions and any adverse side effects.Equity Afia only procures medication from suppliers registered with the Kenya Pharmacy and Poisons Board, assuring that patients get quality medication at all times." />

    <Button
        android:id="@+id/book_appointment_button"
        android:layout_width="150dp"
        android:layout_height="64dp"
        android:layout_below="@id/textField"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="12sp"
        android:radius="5dp"
        android:textColor="@android:color/white"
        android:text="Book Appointment"
        android:backgroundTint="@color/maroon"/>

    <!-- Set the text here -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/book_appointment_button"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        >

        <!-- Add your icon ImageViews here -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_call"
            android:layout_marginEnd="32dp"
            app:tint="@color/maroon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_upload"
            android:layout_marginEnd="32dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_3"
            android:layout_marginEnd="32dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_4"
            android:layout_marginEnd="32dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_5"
            android:layout_marginEnd="32dp"
            />

        <!-- Add more ImageView for more icons -->

    </LinearLayout>

</RelativeLayout>
